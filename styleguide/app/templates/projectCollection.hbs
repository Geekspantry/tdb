{{> navbar }}
<!-- Page wrapper -->
<div class="row border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <ol class="breadcrumb">
      <li>
        <a href="#/projects">Projects</a>
      </li>
      <li>
        <a href="#/projects/entry">Futuro da Medicina</a>
      </li>
      <li>
        Collections
      </li>
      <li class="active">
        <strong>{{collectionSet.[0].name}}</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight" id="main-content">
  <div class="row tooltip-demo">
    <div id="techStash">
      <div class="panel-heading">
        <div class="input-group">
          <input type="text" placeholder="Search for a technology." class="input input-sm form-control">
          <span class="input-group-btn">
         <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-plus"></i> Add</button>
                                    </span>
        </div>
      </div>
      <div class="panel-body sortable-list connectList" id="ibox-technologystash">
        {{#each technologiesStash}} {{> technologyCard this }} {{/each}}
      </div>
    </div>
    {{#with collectionSet.[0]}}
    <!-- COMEÇO de coleção -->
    {{#each collection}}
    <div class="col-lg-9" style="width: 1300px;">
      <div class="panel panel-default">
        <div class="panel-heading">{{title}}</div>
        <div class="panel-body">
          <p>{{description}}</p>
          <div class="collectionsub">
            {{#each subCollection}}
            <div class="collectionSubColumn">
              <div class="ibox-title">
                <h3>{{title}}</h3>
                <div class="ibox-tools">
                  <a class="#"><i class="fa fa-chevron-down"></i></a>
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-gear"></i></a>
                  <ul class="dropdown-menu dropdown-user">
                    <li><a href="#">Edit Title</a></li>
                    <li><a href="#">Edit Description</a></li>
                  </ul>
                </div>
              </div>
              <div class="ibox-content">
                <p>{{description}}</p>
                <p><a><span class="small pull-right">See more</span></a></p>
              </div>
              <div class="sortable-list connectList" id="ibox-subcollection">
                {{#each technologies}} {{> technologyCard this}} {{/each}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    {{/each}} {{/with}}
  </div>
</div>
